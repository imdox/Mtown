<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mtown.app">

    <!-- Permission required for Checking Internet Connection -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".support.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.6135626490"
            android:value="ca-app-pub-1273779759756778~6135626490" />

        <activity android:name=".home.MainActivity" />
        <activity android:name=".home.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.AuthActivity" />
        <activity android:name=".admin.AuditionListActivity" />
        <activity android:name=".user.ProfileActivity" />
        <activity android:name=".user.AddEditUserActivity" />
        <activity android:name=".admin.RequestListActivity" />
        <activity android:name=".admin.AuditionDetailsActivity" />
        <activity android:name=".admin.CreateAuditionActivity" />
        <activity android:name=".UploadActivity" />
        <activity android:name=".ListActivity"></activity>
        <activity android:name=".home.SearchActivity"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.AddEditUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:paddingBottom="50dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layRegister"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:gravity="center|left"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:scaleType="centerInside"
                                    android:id="@+id/selectedImg"
                                    android:padding="8dp"
                                    android:background="@drawable/rounded_border_gray"
                                    android:src="@drawable/logo_b"/>

                                <Button
                                    android:id="@+id/btnProfileImage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/edittext_bg"
                                    android:text="Add Profile"
                                    android:padding="4dp"
                                    android:layout_margin="8dp"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical">

                                <Gallery
                                    android:id="@+id/gallery"
                                    android:layout_below="@+id/selectedImg"
                                    android:layout_width="fill_parent"
                                    android:gravity="left"
                                    android:background="@drawable/rounded_border_gray"
                                    android:layout_height="120dp" />
                                <Button
                                    android:id="@+id/btnSelectCover"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/edittext_bg"
                                    android:layout_marginTop="8dp"
                                    android:text="Add Cover"
                                    android:textSize="@dimen/buttonSize1" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/edtFirstName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:background="@drawable/edittext_bg"
                                        android:hint="First name"
                                        android:padding="12dp"
                                        android:textSize="@dimen/buttonSize1" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/edtLastName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:background="@drawable/edittext_bg"
                                        android:hint="Last name"
                                        android:padding="12dp"
                                        android:textSize="@dimen/buttonSize1" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@color/white"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RadioGroup
                                    android:id="@+id/radioSex"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <RadioButton
                                        android:id="@+id/radioMale"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:checked="true"
                                        android:text="@string/radio_male" />

                                    <RadioButton
                                        android:id="@+id/radioFemale"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.5"
                                        android:text="@string/radio_female" />

                                </RadioGroup>

                            </LinearLayout>

                            <EditText
                                android:id="@+id/txtMobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@drawable/edittext_bg"
                                android:hint="Mobile number"
                                android:inputType="phone"
                                android:padding="12dp"
                                android:maxLength="10"
                                android:textSize="@dimen/buttonSize1"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/txtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@drawable/edittext_bg"
                                android:hint="Email address"
                                android:inputType="textEmailAddress"
                                android:padding="12dp"
                                android:textSize="@dimen/buttonSize1" />

                            <EditText
                                android:id="@+id/edtAbout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@drawable/edittext_bg"
                                android:gravity="left"
                                android:hint="About you"
                                android:lines="4"
                                android:padding="12dp"
                                android:textSize="@dimen/buttonSize1" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/edtHeight"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:background="@drawable/edittext_bg"
                                        android:hint="Height"
                                        android:padding="12dp"
                                        android:inputType="numberDecimal"
                                        android:textSize="@dimen/buttonSize1" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/edtWeight"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:background="@drawable/edittext_bg"
                                        android:hint="Weight"
                                        android:inputType="numberDecimal"
                                        android:padding="12dp"
                                        android:textSize="@dimen/buttonSize1" />
                                </LinearLayout>

                            </LinearLayout>

                            <EditText
                                android:id="@+id/edtSkinColor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@drawable/edittext_bg"
                                android:hint="Skin color"
                                android:inputType="text"
                                android:padding="12dp"
                                android:textSize="@dimen/buttonSize1" />

                            <EditText
                                android:id="@+id/edtEyeColor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@drawable/edittext_bg"
                                android:hint="Eye color"
                                android:inputType="text"
                                android:padding="12dp"
                                android:textSize="@dimen/buttonSize1" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/edtExperience"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:background="@drawable/edittext_bg"
                                        android:hint="Experience"
                                        android:padding="12dp"
                                        android:inputType="phone"
                                        android:textSize="@dimen/buttonSize1" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <EditText
                                        android:id="@+id/edtDesignation"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        android:background="@drawable/edittext_bg"
                                        android:hint="Designation"
                                        android:inputType="textCapSentences"
                                        android:padding="12dp"
                                        android:textSize="@dimen/buttonSize1" />
                                </LinearLayout>

                            </LinearLayout>

                            <EditText
                                android:id="@+id/txtLanguages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@drawable/edittext_bg"
                                android:hint="Known Languages"
                                android:padding="12dp"
                                android:inputType="textCapSentences"
                                android:textSize="@dimen/buttonSize1" />

                            <EditText
                                android:id="@+id/edtAge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@drawable/edittext_bg"
                                android:hint="Age"
                                android:inputType="phone"
                                android:padding="12dp"
                                android:textSize="@dimen/buttonSize1" />

                        </LinearLayout>
                    </ScrollView>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnAddEditProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Add Profile"
        android:textColor="@color/white"
        android:textSize="@dimen/buttonSize1" />


</RelativeLayout>

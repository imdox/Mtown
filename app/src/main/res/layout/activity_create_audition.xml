<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.AddEditUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:paddingBottom="50dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layRegister"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"

                android:orientation="vertical"

                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical">



                            <EditText
                                android:id="@+id/txtAuditionTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@drawable/edittext_bg"
                                android:hint="Audition title"
                                android:inputType="text"
                                android:padding="12dp"
                                android:textSize="@dimen/buttonSize1"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/txtAuditionRole"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@drawable/edittext_bg"
                                android:hint="Audition role"
                                android:inputType="text"
                                android:padding="12dp"
                                android:textSize="@dimen/buttonSize1" />

                            <TextView
                                android:id="@+id/txtSelectModel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@drawable/edittext_bg"
                                android:hint="Select Models"
                                android:padding="12dp"
                                android:textSize="@dimen/buttonSize1" />

                            <EditText
                                android:id="@+id/edtAuditionDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@drawable/edittext_bg"
                                android:gravity="left"
                                android:hint="Audition Description"
                                android:lines="5"
                                android:padding="12dp"
                                android:textSize="@dimen/buttonSize1" />

                            <EditText
                                android:id="@+id/edtAuditionNote"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:background="@drawable/edittext_bg"
                                android:gravity="left"
                                android:hint="Extra note"
                                android:lines="5"
                                android:padding="12dp"
                                android:textSize="@dimen/buttonSize1" />


                        </LinearLayout>
                    </ScrollView>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnCreateAudition"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Create Audition"
        android:textColor="@color/white"
        android:textSize="@dimen/buttonSize1" />


</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.StatsActivity" >

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtTMV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="32sp"
                        android:text="0"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:paddingLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/txtHTM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:text="Total Model"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:weightSum="1"
                    android:orientation="horizontal">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:gravity="center"
                       android:layout_weight="0.5"
                       >
                       <TextView
                           android:id="@+id/txtHATM"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:padding="8dp"
                           android:textSize="24sp"
                           android:text="0"/>
                       <View
                           android:layout_width="match_parent"
                           android:layout_height="1dp"
                           android:paddingLeft="32dp"
                           android:layout_marginRight="16dp"
                           android:background="@color/colorAccent"/>
                       <TextView
                           android:id="@+id/txtATM"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:padding="8dp"
                           android:textSize="16sp"
                           android:text="Active Model"/>
                   </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        >
                        <TextView
                            android:id="@+id/txtHIATM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="8dp"

                            android:textSize="24sp"
                            android:text="0"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:paddingLeft="32dp"
                            android:layout_marginRight="16dp"
                            android:background="@color/colorAccent"/>
                        <TextView
                            android:id="@+id/txtIATM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textSize="16sp"
                            android:text="In Active Model"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtTAV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="32sp"
                        android:text="0"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:paddingLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/colorAccent"/>
                    <TextView
                        android:id="@+id/txtHTA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:text="Total Audition"/>

                </LinearLayout>
        </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>